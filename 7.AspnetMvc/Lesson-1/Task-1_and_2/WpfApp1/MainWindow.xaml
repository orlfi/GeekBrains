<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="330" Width="306">
    <Grid>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="234" Margin="10,12,0,0" VerticalAlignment="Top" Width="204" d:ItemsSource="{d:SampleData ItemCount=5}" IsSynchronizedWithCurrentItem="False"/>
        <Button x:Name="button" Content="Старт" Margin="219,12,18,0" VerticalAlignment="Top" Height="22" Click="button_Click"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="10,253,0,0" VerticalAlignment="Top" Width="204" Maximum="2" Minimum="0.1" Value="1" ValueChanged="slider_ValueChanged"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="219,253,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="27"/>
        <Label x:Name="label" Content="сек." HorizontalAlignment="Left" Margin="246,249,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.006,-0.105"/>

    </Grid>
</Window>
