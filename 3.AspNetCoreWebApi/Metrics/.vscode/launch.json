{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Attach to Chrome",
        "port": 5001,
        "request": "attach",
        "type": "pwa-chrome",
        "webRoot": "${workspaceFolder}"
    },

        {
            "command": "npm start",
            "name": "Start client dev",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/MetricsManager/ClientApp/",
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}/MetricsManager/ClientApp"
        },    
        {
            "name": "Launch Chrome server",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:5001",
            "webRoot": "${workspaceFolder}/MetricsManager/ClientApp"
        },     
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
            "name": "Metrics Agent",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build MetricsAgent",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/MetricsAgent/bin/Debug/net5.0/MetricsAgent.dll",
            "args": [],
            "cwd": "${workspaceFolder}/MetricsAgent",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
            "name": "Metrics Manager",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build MetricsManager",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/MetricsManager/bin/Debug/net5.0/MetricsManager.dll",
            "args": [],
            "cwd": "${workspaceFolder}/MetricsManager",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}