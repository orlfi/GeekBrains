{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "*": "Trace",
      "Microsoft": "Warning",
      "MetricsManager.Controllers*": "Trace",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SqlLiteMetricsDatabase": "Data Source=cluster_metrics.db;Version=3;Pooling=true;Max Pool Size=100;"
  }
}
